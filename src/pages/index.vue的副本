<script>
import MyHeader from '../components/header'
import $ from 'jquery'

export default {

  name: 'index',
  components: { MyHeader },
  data () {
    return {
      column: null, // 图片展示列数
      columnWidth: null, // 每列的宽度(除去padding 8)
      slidePosition: 120, // 位置中心点
      currentCategory: 'Fashion',
      catergories: ['ChrisTmas Decoration', 'Fashion', 'Automotive', 'Makeup & Beauty', 'Shoes', 'Jackets', 'Kids Bags', 'Home Decor', 'Jewelry', 'Tops', 'Dresses', 'Leggings', 'Rings', 'Phones'],
      tdList: {},
      isIndex: '', // 是否是主页还是搜索结果页面
    }
  },
  created () {
    if (this.$route.name === 'index') {
      this.isIndex = true
    } else {
      this.isIndex = false
    }
    // 4列 > 1000 >3列 > 640 > 2列
    let deviceWidth = document.documentElement.clientWidth
    if (deviceWidth >= 1000) {
      this.column = 4
      this.tdList = {
        firstColumn: [],
        secondColumn: [],
        thirdColumn: [],
        forthColumn: []
      }
    } else if (deviceWidth >= 640) {
      this.column = 3
      this.tdList = {
        firstColumn: [],
        secondColumn: [],
        thirdColumn: []
      }
    } else {
      this.column = 2
      this.tdList = {
        firstColumn: [],
        secondColumn: []
      }
    }
    // 计算每列的宽度: 8 左边padding, 16 右边padding
    this.columnWidth = (deviceWidth  - 8 - 16) / this.column - 8 + 'px'
  },
  methods: {
    changeCategory (category, e) { // 目标位置定在距离左边120px
      if (this.currentCategory === category) {
        return
      }
      this.currentCategory = category
      let slideOffsetLeft = e.target.offsetLeft // 点击元素距离父元素左边的距离
      let slideScrollLeft = $('.category-nav').scrollLeft() // 类目往左滚动距离
      let fixedLeft = slideScrollLeft + this.slidePosition // 固定的点距离父元素左边距离
      if (slideOffsetLeft > fixedLeft) {
        // 在固定距离右边
        let toScroll = slideOffsetLeft - fixedLeft
        $('.category-nav').animate({scrollLeft: slideScrollLeft + toScroll + 'px'}, 200)
      } else {
        // 在固定距离左边
        let toScroll = fixedLeft - slideOffsetLeft
        $('.category-nav').animate({scrollLeft: slideScrollLeft - toScroll + 'px'}, 200)
      }
    },
    goDetail () { // 跳转到商品详情页
      this.$router.push({path: '/product-detail/999'})
    }
  }
}
</script>

